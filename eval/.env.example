# Example environment configuration for Azure AI Search RAG evaluation
# Copy this file to .env and fill in your actual values

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_INDEX_NAME=your-index-name

# Azure OpenAI Configuration  
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-gpt-deployment
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Authentication
USE_MANAGED_IDENTITY=true

# Evaluation Configuration
ENABLE_FAITHFULNESS=true
ENABLE_ANSWER_RELEVANCY=true
ENABLE_CONTEXT_PRECISION=true
ENABLE_CONTEXT_RECALL=true
ENABLE_CONTEXT_RELEVANCY=true

MAX_CONTEXT_LENGTH=4000
MAX_ANSWER_LENGTH=1000
EVALUATION_BATCH_SIZE=10
EVALUATION_MODEL=gpt-4
EVALUATION_TEMPERATURE=0.0

# Logging
LOG_LEVEL=INFO